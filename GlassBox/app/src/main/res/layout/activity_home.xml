<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".HomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/container2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/logo_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/candal"
                android:text="Try Machine Learning for yourself"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/candal"
                android:gravity="center_horizontal"
                android:text="Welcome,"
                android:textColor="#ffffff"
                android:textSize="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/start_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/button01"
                    android:layout_width="330dp"
                    android:layout_height="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/pink_circle"
                    android:clickable="false" />

                <Button
                    android:id="@+id/image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/checkbox"
                    android:clickable="false" />

                <Button
                    android:id="@+id/text1"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false"
                    android:fontFamily="@font/anaheim"
                    android:text="Select up to five datasets from multiple catagories"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout1">

                <Button
                    android:id="@+id/button02"
                    android:layout_width="330dp"
                    android:layout_height="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/yellow_circle"
                    android:clickable="false" />

                <Button
                    android:id="@+id/image2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/list"
                    android:clickable="false" />

                <Button
                    android:id="@+id/text2"
                    android:layout_width="251dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false"
                    android:fontFamily="@font/anaheim"
                    android:text="Customize your own model"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

                <Button
                    android:id="@+id/button03"
                    android:layout_width="330dp"
                    android:layout_height="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/pink_circle"
                    android:clickable="false" />

                <Button
                    android:id="@+id/image3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/show"
                    android:clickable="false" />

                <Button
                    android:id="@+id/text3"
                    android:layout_width="248dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false"
                    android:fontFamily="@font/anaheim"
                    android:text="View training progress and test results"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

                <Button
                    android:id="@+id/button04"
                    android:layout_width="330dp"
                    android:layout_height="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/yellow_circle"
                    android:clickable="false" />

                <Button
                    android:id="@+id/image4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/start"
                    android:clickable="false" />

                <Button
                    android:id="@+id/text4"
                    android:layout_width="242dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/gray_box"
                    android:clickable="false"
                    android:fontFamily="@font/anaheim"
                    android:text="Classify your own images with your custom model"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/white_button"
            android:fontFamily="@font/candal"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>


